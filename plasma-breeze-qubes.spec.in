Name:    plasma-breeze-qubes
Version: @VERSION@
Release: @REL@%{?dist}
Summary: Qubes colorful frames for Breeze plasma theme

License: GPLv2+
URL:     https://qubes-os.org

Source0: %{name}-%{version}.tar.gz
Source1: qubes-generate-color-palette
Source2: qubes-generate-color-palette.desktop
BuildRoot: %{_tmppath}/%{name}-%{version}-%{release}-root-%(%{__id_u} -n)

Requires: plasma-breeze
%if 0%{?fedora} >=32 || 0%{?rhel} >= 8
Requires: python3-pyxdg
%else
Requires: pyxdg
%endif

Obsoletes: kde-style-plastik-for-qubes

%description
%{summary}.

%prep
%setup

%install
mkdir -p %{buildroot}/usr/bin
install -m 0755 %{SOURCE1} %{buildroot}/usr/bin/
mkdir -p %{buildroot}/etc/xdg/autostart
install -m 0644 %{SOURCE2} %{buildroot}/etc/xdg/autostart/

%files
/usr/bin/qubes-generate-color-palette
%config(noreplace) /etc/xdg/autostart/qubes-generate-color-palette.desktop

%changelog
@CHANGELOG@
